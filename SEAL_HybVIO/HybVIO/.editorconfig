root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{cpp,hpp,py}]
indent_style = space
indent_size = 4

[*.sh]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

[CMakeLists.txt]
indent_style = space
indent_size = 2
